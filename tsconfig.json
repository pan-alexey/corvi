{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ], 
    "types": [
      "jest",
      "node",
    ],
    "strict": true,
    "removeComments": true,
    "lib": [ "es2015", "dom" ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"],
    },
  },
  "include": [
    "src/**/*",
    "tests/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
}