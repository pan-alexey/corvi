{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "types": [
      "jest",
      "node",
    ],
    "strict": true,
    "removeComments": true,
    "lib": [ "es2015", "dom" ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "src",
  },
  "include": [
    "src/**/*",
    "tests/**/*", "npm",
  ],
  "exclude": [
    "node_modules",
  ],
}