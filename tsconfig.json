{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "removeComments": true,
    "lib": [ "es2015", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
    },
  },
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}