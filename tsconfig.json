{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./types",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
    },
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}